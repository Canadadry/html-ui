<layout>
	<definition>
		<font name="Poppins" src="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&amp;display=swap"/>
	</definition>
	<column width="fill" height="fill" bg-color="#f6f6f6" spacing="100" font-family="Poppins">
		<el width="fill" height="px:68" align="top" bg-color="#0ab09a" shadow="oy:2;b:2;color:rgb(204,204,204)">
			<el align="centerX,centerY">
				<img height="px:48" src="public/logo.png" alt="logo"></img>
			</el>
		</el>
		<column  align="centerX">
			<form>
				<column padding="20" bg-color="white" border-width="1" border-color="#dee2e6" border-rounded="10" spacing="10" shadow="oy:2;b:2;color:rgb(204,204,204)">
					<row>
						<el width="px:40"></el>
						<column spacing="20">
							<el align="centerX" font-size="28" font-color="#6e6e6e" font-weight="5">Connexion</el>
							<el width="px:40"></el>
							<input type="text" name="username" value="">
								<label position="above"><el font-size="17" font-color="#909090" font-weight="5">IDENTIFIANT</el></label>
								<placeholder>votre email : jean@paul.fr</placeholder>
							</input>
							<input type="text" name="username" value="">
								<label position="above"><el font-size="17" font-color="#909090" font-weight="5">MOT DE PASSE</el></label>
								<placeholder>********</placeholder>
							</input>
							<row spacing="50">
								<el align="left,centerY" font-color="#909090" font-size="13" font-weight="3">Mot de passe oublié?</el>
								<button align="right" bg-color="#0ab09a" border-rounded="30" padding="15" shadow="oy:2;b:2;color:rgb(204,204,204)">
									<row>
										<el width="px:50"></el>
										<el font-color="white" font-size="15" font-weight="7">Se connecter</el>
										<el width="px:50"></el>
									</row>
								</button>
							</row>
							<el width="px:40"></el>
						</column>
						<el width="px:40"></el>
					</row>
				</column>
			</form>
			<el align="centerX" font-size="13" font-color="#909090" font-weight="5">EVERYCHECK IN ENGLISH</el>
		</column>
		<row width="fill"  height="px:60" bg-color="white" padding="15">
			<el width="portion:2" font-size="20" font-color="#0ab09a" font-weight="9">EVERYCHECK.COM</el>
			<row width="portion:8" bg-color="white">
				<el width="portion:1"><el align="centerX" font-color="#909090" font-size="13">CGU</el></el>
				<el width="portion:1"><el align="centerX" font-color="#909090" font-size="13">MENTIONS LÉGALES</el></el>
				<el width="portion:1"><el align="centerX" font-color="#909090" font-size="13">CONFIDENTIALITÉ ET COOKIE</el></el>
				<el width="portion:1"><el align="centerX" font-color="#909090" font-size="13">INFORMATIQUE ET LIBERTÉ</el></el>
			</row>
			<el width="portion:2"></el>
		</row>
	</column>
</layout>
